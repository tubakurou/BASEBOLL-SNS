<div class='container px-5 px-sm-0'>
  <h2>出場選手一覧</h2>
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <table>
        <thead>
          <tr class="info">
            <th>名前</th>
            <th>球数</th>
            <th>失点</th>
            <th>結果</th>
            <th>スタメン</th>
            <th>守備</th>
          </tr>
        </thead>
        <tbody>
  				<% @game_players.each do |player| %>
    				<tr>
    				  <td class="info col-xs-1">
    				    <%= player.player.first_name %>
    				  </td>
    				  <td class="info col-xs-1">
    				    <%= player.boll_count %>
    				  </td>
              <td class="info col-xs-1">
                <%= player.point_lost %>
              </td>
                <td class="info col-xs-1">
    				    <%= player.bat_results %>
    				  </td>
              <td class="info col-xs-1">
                <%= player.order_status %>
              </td>
              <td class="info col-xs-1">
                <%= player.position_status %>
              </td>
          <% end %>
            </tr>
          </tbody>
      </table>
    </div>
  </div>
</div>
