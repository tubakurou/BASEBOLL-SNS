<div class='container px-5 px-sm-0'>
  <h2>所属選手一覧</h2>
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <table>
        <thead>
          <tr class="info">
            <th>イメージ</th>
            <th>背番号</th>
            <th>選手名</th>
            <th>利き腕</th>
            <th>出場ステータス</th>
            <th>スタメンステータス</th>
            <th>打席ステータス</th>
            <th>守備ステータス</th>
            <th>走塁ステータス</th>
          </tr>
        </thead>
        <tbody>
  				<% @players.each do |player| %>
    				<tr>
    				  <td class="info col-xs-1">
    				  <td><%= attachment_image_tag player, :player_image, format: 'jpeg', size: "100x100" %>
              <td class="info col-xs-1">
                <%= player.number %>
              </td>
              <td class="text-left">
                <%= link_to team_player_path(@team, player.id), class: "btn-link" do %>
                  <%= player.first_name %><%= player.last_name %>
                <% end %>
              </td>
              <td class="text-right col-xs-1">
                <%= player.dominant_pitch %><%= player.dominant_pitch %>
              </td>
              <td class="text-left col-xs-2">
              <%= form_with model:player,url:admins_team_player_path(@team, player.id),method: :patch, local:true do |f|%>
                  <div class="play_status">
                    <div>
                      <%= f.radio_button :play_status, true %>
                      <%= f.label :play_status, "出場中", value: true %>
                    </div>
                      <div>
                        <%= f.radio_button :play_status, false %>
                        <%= f.label :play_status, "欠場", value: false %>
                      </div>
                  　</div>

                  <div class="is_batting">
                    <div>
                      <%= f.radio_button :is_batting, true %>
                      <%= f.label :is_batting, "打席中", value: true %>
                    </div>
                      <div>
                        <%= f.radio_button :is_batting, false %>
                        <%= f.label :is_batting, "ベンチ", value: false %>
                      </div>
                  　</div>

                  <td class="text-left col-xs-2">
                    <div class="position_statusg">
                  　   <%= f.label :"守備位置" %>
                      <%=player.position_status %> <%= f.select :position_status,Player.position_statuses.keys.map {|k| [I18n.t("enums.player.position_status.#{k}"), k]} %>

                  <td class="text-left col-xs-2">
                    <div class="position_statusg">
                  　 <%= f.submit "変更を保存" %>
              <% end %>

              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
