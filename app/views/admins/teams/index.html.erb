<div class= "container">
  <div class= "row">
    <div class="col-lg-8">
      <h3>チーム一覧・追加</h3>

      <div class= "create-teams">
        <%= form_with model:@team, url: {controller: "teams", action: "create"} do |f| %>

        <div class="form-group">
            <%= f.label :name, "チーム名" %>
            <%= f.text_field :team_name %>
            <div class="col-xs-4 col-xs-offset-1">
          <div class="img_field">
             <%= attachment_image_tag @team, :team_image, :fill, 100, 100, format: 'jpeg' %>
          </div>
            <%= f.file_field :team_image %>
        </div>
            <%= f.submit "新規登録" %>
          </div>
          <% end %>
      </div>

      <div class= "team-list">
        <table>
          <thead>
            <tr>チーム一覧</tr>
          </thead>

          <tbody>
            <% @teams.each do |teams| %>
              <tr>
                <td><%= attachment_image_tag teams, :team_image, format: 'jpeg', size: "100x100" %><%= teams.team_name %></td>
                <td><%= link_to "編集する", edit_admins_team_path(teams.id), class: "btn btn-primary" %></td>
                <div><%= link_to "削除する", admins_team_path(teams.id), method: :delete, class: "btn btn-primary" %></div>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>