<table class="table table-hover table-inverse">
      <tr>
        <tbody>
          <% @users.each do |user| %>
          <tr>
           <td>
             <%= link_to attachment_image_tag(user,:user_image, size:"40x40", format: 'jpeg', fallback: "no_image_user.png"),user_path(user) %>
            </td>
            <td><%=user.first_name %><%=user.last_name %></td>
            <td>ファンチーム：<%= user.team.team_name %></td>
              <% if user_signed_in? && @user != current_user %>
                <td id="follow_form">
                <% if current_user.following?(user) %>
                  <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete %><%= user.followers.count %>
                <% else %>
                  <%= link_to "フォローする", user_relationships_path(user.id), method: :post %><%= user.followings.count %>
                <% end %>
                  </td>
              <% end %>
          <% end %>
            </td>
          </tr>
         </tbody>
      </tr>
  </table>